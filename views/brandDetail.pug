extends layout


block content
  .page-header
    h3 #{brand.account_name}

  form.form-horizontal(action='/brands/' + brand.account_id + '/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='name') Brand Account ID:
      .col-sm-7
        label.col-sm-3.control-label(for='name') #{brand.account_id}
    .form-group
      label.col-sm-3.control-label(for='website') Brand Name:
      .col-sm-7
        input.form-control(type='text', name='account_name', id='account_name', value=brand.account_name)
    .form-group
      label.col-sm-3.control-label(for='name') Website URL:
      .col-sm-7
        label.col-sm-3.control-label(for='name') #{brand.account_website_url}
    .form-group
      label.col-sm-3.control-label(for='name') Industry Vertical:
      .col-sm-7
        label.col-sm-3.control-label(for='name') #{brand.account_industry_vertical}
    .form-group
      label.col-sm-3.control-label(for='name') Last Run Ingested Records:
      a(href='/brands/' + brand.account_id + '/ingest')
        img(src='http://chesa.com/app/wp-content/uploads/2016/03/ingest-icon.png', width='25', height='25')
      .col-sm-7
        input.form-control(type='text', name='account_record_lastrefresh', id='account_record_lastrefresh', value=brand.account_record_lastrefresh)
    .form-group
      label.col-sm-3.control-label(for='name') Total Ingested Records:
      .col-sm-7
        input.form-control(type='text', name='account_record_total', id='account_record_total', value=brand.account_record_total)        
    .form-group
      label.col-sm-3.control-label(for='name') Tethered User Email:
      .col-sm-7
        input.form-control(type='text', name='account_tetherer_email', id='account_tetherer_email', value=brand.account_tetherer_email)
    .form-group
      label.col-sm-3.control-label(for='name') Dashboard Types: Options are eCommerce, Mobile Commerce, Content Marketing, Site Performance,Real-time Overview, S E O Overview
      .col-sm-7
        if (brand.account_dashboard_types &&  brand.account_dashboard_types.length > 0)
          input.form-control(type='text', name='account_dashboard_types', id='account_dashboard_types', value=brand.account_dashboard_types.toString())
        else
          input.form-control(type='text', name='account_dashboard_types', id='account_dashboard_types', value='')
    .form-group
      label.col-sm-3.control-label(for='name') Brand Tags:
      .col-sm-7
        if (brand.account_tags &&  brand.account_tags.length > 0)
          input.form-control(type='textarea', name='account_tags', id='account_tags', value=brand.account_tags.toString())
        else
          input.form-control(type='textarea', name='account_tags', id='account_tags', value='')

    .form-group
      label.col-sm-3.control-label(for='name') Brand Dashboard URL:
      .col-sm-7
        input.form-control(type='text', name='account_dashboard_url', id='account_dashboard_url', value=brand.account_dashboard_url.toString())
    .form-group
      label.col-sm-3.control-label(for='name') Views:
      .col-sm-7
        input.form-control(type='text', name='views', id='views', value=JSON.stringify(brand.views))
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Update Brand