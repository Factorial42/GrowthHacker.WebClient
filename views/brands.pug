extends layout

block content
	.page-header
		h2  Tethered Brand Listing
		a(href='/auth/googleanalytics')
			button(type="button") Tether Google Analytics Account


	div
	table
		thead
			th Name    
			th Website     
			th Dashboard
			th GA Profile 
			th Tags  			
			th Manage  			
		tr
		tbody
			for brand in brands
				tr
					td
						a(href='/brands/' + brand.account_id) #{brand.account_name} 
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_website_url
					td
						a(href='analytics') View Analytics									
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_default_profile_id
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_tags			
					td
						a(href='http://52.37.72.190:5601/app/kibana#/dashboard/Sweat-Tailor-Ecommerce-Dashboard', target='_blank') Dashboard
				tr
			else
				tr
					td= "Brands are not tethered yet! Get started by clicking on the button above!!"
				tr
