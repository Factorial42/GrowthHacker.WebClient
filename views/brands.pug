extends layout

block content
	.page-header
		h2  Tethered Brand Listing
		a(href='/auth/googleanalytics')
			button(type="button") Tether Google Analytics Account


	div
	table
		thead
			th Name    
			th Website     
			th Dashboard      
			th Records 	
			th    Types 
			th Tags
			th Status 			
		tr
		tbody
			for brand in brands
				tr
					td
						a(href='/brands/' + brand.account_id) #{brand.account_name} 
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_website_url
					if (brand.account_dashboard_types && brand.account_dashboard_types.length > 0 )
							td 
								a(href='analytics/' + brand.account_id) View									
					else
							td Not Set 
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.actual_totals.consolidated_total
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_dashboard_types			
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_tags	
					td.col-md-5(style="word-wrap: break-word; width:50px;")= brand.account_ingest_status
				tr
			else
				tr
					td= "Brands are not tethered yet! Get started by clicking on the button above!!"
				tr
